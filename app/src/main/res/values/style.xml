<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_view_style">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/edit_text_bg</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/edit_text_bg</item>
    </style>

</resources>