<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/base_pink"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_label_scanned_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/total_scanned_stock"
        android:textAppearance="@style/TextAppearance.ShweMi.Caption"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_total_scanned_box_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3"
        android:textAppearance="@style/TextAppearance.ShweMi.Caption"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_label_scanned_box"
        app:layout_constraintTop_toTopOf="@id/tv_label_scanned_box"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_scanned_box"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_arrange_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_scanned_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_arrange_box"
        android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>