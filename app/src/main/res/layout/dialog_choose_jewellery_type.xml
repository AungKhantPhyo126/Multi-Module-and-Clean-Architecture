<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:id="@+id/selection_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fillViewport="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_exit">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_first_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jewellery_type"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2" />

            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_right_arrow" />

            <TextView
                android:id="@+id/tv_second_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/item"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2" />

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right_arrow" />

            <TextView
                android:id="@+id/tv_third_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_third_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_right_arrow" />

            <TextView
                android:id="@+id/tv_fourth_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_fourth_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_right_arrow" />


            <!--            <View-->
            <!--                android:id="@+id/view"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:background="@color/divider_grey"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/tv_first_cat" />-->

        </androidx.appcompat.widget.LinearLayoutCompat>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cross" />

    <TextView
        android:id="@+id/tv_label_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Choose Jewellery Type"
        android:textAppearance="@style/TextAppearance.ShweMi.Headline6"
        app:layout_constraintStart_toStartOf="@+id/selection_scroll"
        app:layout_constraintTop_toBottomOf="@+id/selection_scroll" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_frequently_used">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:chipSpacing="8dp"
            app:singleLine="false"
            app:singleSelection="true">

        </com.google.android.material.chip.ChipGroup>
    </ScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_frequently_used"
        app:layout_constraintBottom_toBottomOf="parent"
        app:spanCount="2"
        tools:listitem="@layout/item_image_selection" />


    <CheckBox
        android:id="@+id/cb_frequently_used"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/primary_color"
        android:visibility="gone"
        android:text="@string/frequently_used"
        app:layout_constraintEnd_toStartOf="@+id/cb_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_label_choose"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_choose" />

    <CheckBox
        android:id="@+id/cb_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_color"
        android:visibility="gone"
        android:text="@string/image_view"
        app:layout_constraintBottom_toBottomOf="@+id/cb_frequently_used"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb_frequently_used"
        app:layout_constraintTop_toTopOf="@+id/cb_frequently_used" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />


</androidx.constraintlayout.widget.ConstraintLayout>