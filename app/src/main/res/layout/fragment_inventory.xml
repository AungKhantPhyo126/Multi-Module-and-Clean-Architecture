<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio_button_sample_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:buttonTint="@color/primary_color"
            android:checked="true"
            android:text="@string/sample_take"
            android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_button_sample_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_color"
            android:text="@string/sample_return"
            android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_label_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/stock_code"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        app:layout_constraintBottom_toBottomOf="@id/til_scan_here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/til_scan_here" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_scan_here"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:boxBackgroundColor="@color/white"
        app:endIconDrawable="@drawable/ic_qr_scan"
        app:endIconMode="custom"
        app:endIconTintMode="screen"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_scan_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type or Scan here"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>
    <include
        android:layout_marginTop="16dp"
        android:id="@+id/layout_sample_lists"
        layout="@layout/include_sample_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_scan_here"
        app:layout_constraintBottom_toTopOf="@id/layout_btn_group"/>
    <include
        android:layout_marginTop="16dp"
        android:id="@+id/layout_sample_return"
        layout="@layout/include_sample_return_inventory"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_scan_here"
        app:layout_constraintBottom_toTopOf="@id/layout_btn_group"/>
    <include
        android:id="@+id/layout_btn_group"
        layout="@layout/include_outside_button_group"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>