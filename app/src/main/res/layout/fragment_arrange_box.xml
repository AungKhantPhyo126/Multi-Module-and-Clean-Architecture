<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_label_box_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/box_code"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/mcv_scan_here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mcv_scan_here" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_scan_here"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_box_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/popup_window_transparent"
                android:hint="Type or Scan"
                android:imeOptions="actionDone"
                android:paddingStart="8dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/primary_color" />

            <ImageView
                android:id="@+id/iv_scan_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:src="@drawable/ic_qr_scan" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <include
        android:layout_marginTop="16dp"
        android:id="@+id/include_arrange_box_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/include_arrange_box_list"
        android:background="@color/base_pink"
        app:layout_constraintTop_toBottomOf="@id/mcv_scan_here"
        app:layout_constraintBottom_toTopOf="@id/layout_btn_group"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/layout_btn_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingVertical="14dp"
        android:text="Arranged"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>