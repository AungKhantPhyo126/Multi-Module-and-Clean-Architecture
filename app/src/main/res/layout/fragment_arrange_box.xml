    <include
        android:layout_marginTop="16dp"
        android:id="@+id/include_arrange_box_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/include_arrange_box_list"
        android:background="@color/base_pink"
        app:layout_constraintTop_toBottomOf="@id/til_scan_here"
        app:layout_constraintBottom_toTopOf="@id/btn_arrange"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_arrange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingVertical="14dp"
        android:text="Arranged"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>