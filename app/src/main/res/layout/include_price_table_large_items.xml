<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_label_large_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/large_items"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_large_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_label_large_items"
        app:layout_constraintTop_toTopOf="@id/tv_label_large_items" />

    <TextView
        android:id="@+id/tv_label_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="@string/damage"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toStartOf="@+id/tv_label_good"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_large_items" />

    <TextView
        android:id="@+id/tv_label_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="@string/good"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toStartOf="@+id/tv_label_not_to_go"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_label_damage"
        app:layout_constraintTop_toTopOf="@+id/tv_label_damage" />

    <TextView
        android:id="@+id/tv_label_not_to_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/not_to_go"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_label_good"
        app:layout_constraintTop_toTopOf="@+id/tv_label_good" />

    <TextView
        android:id="@+id/tv_label_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
