<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/materialToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_menu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Fill Order Info"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_end_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_end_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/paper_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_stock_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar"
        app:srcCompat="@drawable/dummy_chip_image" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_stock_image"
        app:layout_constraintTop_toTopOf="@+id/iv_stock_image"
        app:srcCompat="@drawable/star_icon" />

    <TextView
        android:id="@+id/tv_label_avg_wastage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Average Weight per Unit"
        android:textAppearance="@style/TextAppearance.ShweMi.Caption"
        android:textColor="@color/primary_text_color"
        app:layout_constraintStart_toStartOf="@+id/iv_star"
        app:layout_constraintTop_toBottomOf="@+id/iv_star" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_kyat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_stock_image"
        app:layout_constraintEnd_toStartOf="@+id/mcv_pae"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/iv_stock_image"
        app:layout_constraintStart_toStartOf="@id/tv_label_avg_wastage"
        app:layout_constraintTop_toBottomOf="@id/tv_label_avg_wastage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kyat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_label_kyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K"
                android:textColor="@color/edit_text_color"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_pae"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_stock_image"
        app:layout_constraintEnd_toStartOf="@+id/mcv_ywae"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mcv_kyat"
        app:layout_constraintTop_toBottomOf="@id/tv_label_avg_wastage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pae_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/primary_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_label_pae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textColor="@color/edit_text_color"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_ywae"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_stock_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mcv_pae"
        app:layout_constraintTop_toBottomOf="@id/tv_label_avg_wastage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ywae_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_label_ywae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y"
                android:textColor="@color/edit_text_color"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_label_gold_quality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gold Quality"
        android:textAppearance="@style/TextAppearance.ShweMi.Body1"

        app:layout_constraintBottom_toBottomOf="@+id/mcv_choose_gold_quality"
        app:layout_constraintEnd_toStartOf="@+id/mcv_choose_gold_quality"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/iv_stock_image"
        app:layout_constraintTop_toTopOf="@+id/mcv_choose_gold_quality" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_choose_gold_quality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"
app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@+id/mcv_ywae"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/mcv_kyat"
        app:layout_constraintTop_toBottomOf="@+id/iv_stock_image">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_choose_gold_quality"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:endIconTint="@color/primary_color"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorEnabled="false"
            >

            <AutoCompleteTextView
                android:id="@+id/act_gold_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose Gold Quality"
                android:inputType="none"
                android:focusable="false"
                android:textColorHint="@color/primary_color"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_label_gold_smith"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GoldSmith"
        android:textAppearance="@style/TextAppearance.ShweMi.Body1"

        app:layout_constraintBottom_toBottomOf="@+id/mcv_choose_gold_smith"
        app:layout_constraintEnd_toStartOf="@+id/mcv_choose_gold_smith"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/iv_stock_image"
        app:layout_constraintTop_toTopOf="@+id/mcv_choose_gold_smith" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_choose_gold_smith"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@+id/mcv_ywae"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/mcv_kyat"
        app:layout_constraintTop_toBottomOf="@+id/mcv_choose_gold_quality">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_choose_gold_smith"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeWidth="0dp"
            app:endIconTint="@color/primary_color"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorEnabled="false"
            >

            <AutoCompleteTextView
                android:id="@+id/act_gold_smith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose GoldSmith"
                android:inputType="none"
                android:focusable="false"
                android:textColorHint="@color/primary_color"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_stock_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/mcv_choose_gold_smith">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:text="Size"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Instock Qty"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:text="Order Qty"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_stock_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_stock_info_in_fill_order_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mcv_stock_info_title"
        app:layout_constraintBottom_toTopOf="@id/btn_sample_take"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <include
        android:id="@+id/include_button"
        layout="@layout/include_fill_order_info_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sample_take"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Sample Take"
        app:rippleColor="@color/based_grey"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/white"
        android:textAllCaps="false"
        android:paddingVertical="14dp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintBottom_toTopOf="@+id/include_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>