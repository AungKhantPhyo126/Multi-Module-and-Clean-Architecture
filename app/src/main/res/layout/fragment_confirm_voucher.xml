<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/materialToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <ImageButton-->
<!--                android:id="@+id/ib_back"-->
<!--                android:layout_width="28dp"-->
<!--                android:layout_height="28dp"-->
<!--                android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:src="@drawable/ic_back"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:tint="?attr/colorPrimary" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_voucher"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ib_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_invoice_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/invoice_code"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mcv_scan_here"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_scan_here"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_label_invoice_code"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/scan_here"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_color" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_qr_scan" />

                    <TextView
                        android:id="@+id/result_invoice_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                        android:visibility="gone"
                        tools:text="12442354" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/tv_label_scanned_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scanned_invoice"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/til_scanned_invoice"
                app:layout_constraintStart_toStartOf="@+id/tv_label_invoice_code"
                app:layout_constraintTop_toTopOf="@+id/til_scanned_invoice" />

            <TextView
                android:id="@+id/tv_label_old_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/old_invoice"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/til_old_invoice"
                app:layout_constraintStart_toStartOf="@+id/tv_label_scanned_invoice"
                app:layout_constraintTop_toTopOf="@+id/til_old_invoice" />

            <TextView
                android:id="@+id/tv_label_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposit"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/til_deposit"
                app:layout_constraintStart_toStartOf="@+id/tv_label_old_invoice"
                app:layout_constraintTop_toTopOf="@+id/til_deposit" />

            <TextView
                android:id="@+id/tv_label_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/balance"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"

                app:layout_constraintBottom_toBottomOf="@+id/til_balance"
                app:layout_constraintStart_toStartOf="@+id/tv_label_deposit"
                app:layout_constraintTop_toTopOf="@+id/til_balance" />

            <TextView
                android:id="@+id/tv_label_rebuy_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rebuy Gold(gm)"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/til_rebuy_gold"
                app:layout_constraintStart_toStartOf="@+id/tv_label_balance"
                app:layout_constraintTop_toTopOf="@+id/til_rebuy_gold" />

            <TextView
                android:id="@+id/tv_label_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stock_code"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/til_stock_code"
                app:layout_constraintStart_toStartOf="@+id/tv_label_balance"
                app:layout_constraintTop_toTopOf="@+id/til_stock_code" />

            <TextView
                android:id="@+id/tv_label_reduced_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reduced Weight"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/til_reduced_weigh"
                app:layout_constraintStart_toStartOf="@+id/tv_label_balance"
                app:layout_constraintTop_toTopOf="@+id/til_reduced_weigh" />

            <TextView
                android:id="@+id/tv_label_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/reason"
                android:textAppearance="@style/TextAppearance.ShweMi.Subtitle2"
                app:layout_constraintStart_toStartOf="@+id/tv_label_balance"
                app:layout_constraintTop_toTopOf="@+id/til_reason" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_scanned_invoice"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_total_amount"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/mcv_scan_here">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_scanned_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_old_invoice"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_old_total_amount"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/til_scanned_invoice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_old_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_deposit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_deposit_amount"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/til_old_invoice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_balance"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_balance_amount"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/til_deposit">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_rebuy_gold"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter Total Rebuy Amount"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/til_balance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_rebuy_gold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/primary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_rebuy_gold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_stock_code"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_stock_code"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/divider">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_stock_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reduced_weigh"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_weigh_different_amount"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/til_stock_code">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_reduced_weigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reason"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_reason"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/daily_gold_price_input_box_boarder_color"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/edit_text_color"
                app:layout_constraintEnd_toEndOf="@id/mcv_scan_here"
                app:layout_constraintStart_toStartOf="@+id/mcv_scan_here"
                app:layout_constraintTop_toBottomOf="@+id/til_reduced_weigh">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLines="5"
                    android:minLines="3"
                    android:scrollbars="vertical" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>