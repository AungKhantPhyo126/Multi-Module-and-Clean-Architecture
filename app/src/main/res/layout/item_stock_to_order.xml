<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dummy_chip_image" />

        <TextView
            android:id="@+id/tv_label_avg_wastage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Weight per Unit:"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />
        <TextView
            android:id="@+id/tv_kyat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_avg_wastage"
            app:layout_constraintTop_toTopOf="@id/tv_label_avg_wastage"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"/>
        <TextView
            android:id="@+id/tv_label_kyat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K"
            android:textColor="@color/edit_text_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_kyat_value"
            app:layout_constraintTop_toTopOf="@id/tv_kyat_value"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_pae_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_kyat"
            app:layout_constraintTop_toTopOf="@id/tv_label_kyat"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_label_pae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:textColor="@color/edit_text_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_pae_value"
            app:layout_constraintTop_toTopOf="@id/tv_pae_value"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_ywae_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_pae"
            app:layout_constraintTop_toTopOf="@id/tv_label_pae"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_label_ywae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:textColor="@color/edit_text_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_ywae_value"
            app:layout_constraintTop_toTopOf="@id/tv_ywae_value"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingEnd="0dp"
            android:text="Tap to Order"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_color"
            app:icon="@drawable/ic_cart"
            app:iconTint="@color/edit_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_ywae"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_avg_wastage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>