<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/mcv_order_stock"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="1dp"
    app:strokeColor="@color/green"
    android:layout_margin="16dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_stock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dummy_chip_image" />

        <TextView
            android:id="@+id/tv_label_avg_wastage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Avg Weight Per Unit"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            app:layout_constraintStart_toEndOf="@+id/iv_stock"
            app:layout_constraintTop_toTopOf="@+id/iv_stock" />
        <TextView
            android:id="@+id/tv_cat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            app:layout_constraintTop_toBottomOf="@id/tv_label_avg_wastage"
            app:layout_constraintStart_toStartOf="@id/tv_label_avg_wastage"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="category name"/>
        <TextView
            android:id="@+id/tv_kyat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_avg_wastage"
            app:layout_constraintTop_toTopOf="@id/tv_label_avg_wastage"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"/>
        <TextView
            android:id="@+id/tv_label_kyat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K"
            android:textColor="@color/edit_text_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_kyat_value"
            app:layout_constraintTop_toTopOf="@id/tv_kyat_value"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_pae_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_kyat"
            app:layout_constraintTop_toTopOf="@id/tv_label_kyat"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_label_pae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:textColor="@color/edit_text_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_pae_value"
            app:layout_constraintTop_toTopOf="@id/tv_pae_value"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_ywae_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_pae"
            app:layout_constraintTop_toTopOf="@id/tv_label_pae"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>
        <TextView
            android:id="@+id/tv_label_ywae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:textColor="@color/edit_text_color"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_ywae_value"
            app:layout_constraintTop_toTopOf="@id/tv_ywae_value"
            android:textAppearance="@style/TextAppearance.ShweMi.Body1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tap_to_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:text="@string/tap_to_order"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_color"
            app:icon="@drawable/ic_cart"
            app:iconTint="@color/edit_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cat_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>